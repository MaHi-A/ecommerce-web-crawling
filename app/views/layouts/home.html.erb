<html>
<head>
  <title>
  Online Image Sharing
  </title>
  <%= stylesheet_link_tag 'home' %>
  <%= csrf_meta_tags %>
  <meta charset="utf-8"/>
  <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
  <!--<link href="http://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet" type="text/css">/</link>-->
  <!--<link href="<%= asset_path('fav.ico') %>" rel="shortcut icon"></link>-->
</head>
<body>
<div id="container-fluid">
  <%= render :partial => '/layouts/home/header' %>
  <div class="flash bg-danger">
    <% flash.each do |type, message| %>
        <div class=" alert alert-<%= type %>">
            <span>
              <%= message %>
            </span>
          <span class="pull-right x" style="cursor:pointer; padding-right: 20px">X</span>
        </div>
    <% end %>
  </div>
  <div class="main-color" id="main-wrap">
    <%= yield %>
  </div>
</div>
<%= render :partial => '/layouts/home/footer' %>
<%= javascript_include_tag 'home' %>
</body>
</html>
