<div class="top-title-wrapper">
  <div class="container p-t-50">
    <div class="row">
      <div class="col-md-4 col-sm-2 col-xs-12"></div>
      <div class="col-md-4 col-sm-8 col-xs-12">
        <div class="page-info">
          <h4 class="h3-page-title text-center"></h4>
          <h2 class="h2-page-desc"></h2>
        </div>
      </div>
      <div class="col-md-4 col-sm-2 col-xs-12"></div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-4 col-sm-2 col-xs-12"></div>
    <div class="col-md-4 col-sm-8 col-xs-12">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="list-group">
            <div class="list-group-item">
              <%= f.text_field :first_name, class: 'form-control no-border', required: true, placeholder: 'First name' %>
            </div>
            <div class="list-group-item">
              <%= f.text_field :last_name, class: 'form-control no-border ', required: true, placeholder: 'Last name' %>
            </div>
            <div class="list-group-item">
              <%= f.text_field :email, class: 'form-control no-border', required: true, placeholder: 'Email' %>
            </div>
            <div class="list-group-item">
              <%= f.password_field :password, class: 'form-control no-border', required: true, autocomplete: "off", placeholder: 'Password' %>
            </div>
          </div>
          <%= f.submit "Sign up", {class: 'btn btn-primary btn-lg btn-block'} %>
          <p></p>
          <p class="text-muted text-center">
            <small>Already have an account?</small>
          </p>
          <a class="btn btn-lg btn-default btn-block" href="/users/sign_in">Sign in</a>
      <% end %>
      <div class="text-center padder">
        <p>
          <small>
            Â© 2016 Crawling Application
          </small>
        </p>
      </div>
    </div>
    <div class="col-md-4 col-sm-2 col-xs-12"></div>
  </div>
</div>
