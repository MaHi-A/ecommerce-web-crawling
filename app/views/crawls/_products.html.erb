<tr>
  <div class="table-responsive">
    <table class="table table-bordered table-inverse">
      <% crawl.products.each_with_index do |product, index| %>
        <tr>
          <td class = 'bold-font'>Title: </td>
          <td> <%= product[:title] %> </td>
        </tr>
        <tr>
          <td class = 'bold-font'>Actual Price: </td>
          <td> <%= product[:actual_price] %> </td>
        </tr>
        <tr>
          <td class = 'bold-font'>Offer Price:</td>
          <td> <%= product[:offer_price] %> </td>
        </tr>
        <tr>
          <td class = 'bold-font'>EMI : </td>
          <td> <%= product[:emi] %> </td>
        </tr>
        <tr>
          <td class = 'bold-font'>Ratings:</td>
          <td> <%= product[:ratings] %> </td>
        </tr>
        <tr>
          <td class = 'bold-font'>Image Url:</td>
          <td> <a href = "<%= product[:image] %>" target = '_blank'><%= product[:image] %> </a></td>
        </tr>
      <% end %>
    </table>
  </div>
</tr>
